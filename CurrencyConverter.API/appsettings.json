{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=../Data/currency_converter.db"
  },
  "JWT": {
    "Secret": "YourSuperSecretKeyThatShouldBeAtLeast32CharactersLong!2024",
    "Issuer": "CurrencyConverterAPI",
    "Audience": "CurrencyConverterAPI",
    "ExpirationHours": 24
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/currency-converter-.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
